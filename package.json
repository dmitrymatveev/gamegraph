{
  "name": "@janderbot/gamegraph",
  "version": "0.1.0",
  "description": "Web framework for building real-time GRIP capable api application with GraphQL",
  "main": "src/index.ts",
  "author": "janderbot <contact@janderbot.one>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "start": "node build/index.js",
    "dev": "tsnd --respawn src/index.ts",
    "build": "tsc",
    "test": "echo \"Error: no test specified\" && exit 1",
    "docker:gamegraph:build": "docker build . -t gamegraph",
    "docker:gamegraph:start": "docker run -d --rm -p 7999:7999 -p 5560-5563:5560-5563 -d gamegraph:latest",
    "docker:pushpin:start": "cross-env-shell docker run -d -ti -p 7999:7999 -p 5560-5563:5560-5563 -v $INIT_CWD/pushpin:/etc/pushpin/ fanout/pushpin:latest",
    "package:linux-x64": "pkg build/index.js -o gamegraph -t node14-linux-x64"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "cross-env": "^7.0.3",
    "pkg": "^5.5.1",
    "ts-node-dev": "^1.1.8",
    "tslint": "^6.1.3",
    "typescript": "^4.5.2"
  },
  "dependencies": {
    "@fanoutio/serve-grip": "^1.1.9",
    "@graphql-tools/schema": "^8.3.1",
    "express": "^4.17.1",
    "graphql": "^16.2.0",
    "graphql-helix": "^1.11.0"
  }
}
